<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:igore="MissingDefaultResourse">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <com.example.seminario.seminario.custom_view.MyCustomTextView2
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="The Secret Kitchen"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_location"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"

                        app:srcCompat="@drawable/shape" />

                    <com.example.seminario.seminario.custom_view.MyCustomTextView1
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:text="MG Road"
                        android:textColor="@color/subtext"
                        android:textSize="12dp" />

                    <com.example.seminario.seminario.custom_view.MyCustomTextView2
                        android:id="@+id/goMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundtext2"
                        android:paddingBottom="3dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="2dp"
                        android:text="Ir al Mapa"
                        android:textColor="#000"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/total"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_monetization_on_black_24dp" />

                    <com.example.seminario.seminario.custom_view.MyCustomTextView1
                        android:id="@+id/totalmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="MG Road"
                        android:textColor="@color/subtext"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.example.seminario.seminario.custom_view.MyCustomTextView2
                        android:id="@+id/text_menu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundtext3"
                        android:paddingBottom="3dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="2dp"
                        android:text="Estado:RECIBIDO"
                        android:textColor="#000"
                        android:textSize="11dp" />

                    <com.example.seminario.seminario.custom_view.MyCustomTextView2
                        android:id="@+id/updateOrderCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roundtext"
                        android:paddingBottom="3dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="2dp"
                        android:text="CANCELAR PEDIDO"
                        android:textColor="#f6464d"
                        android:textSize="11dp" />

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

    d.support.constraint.ConstraintLayout>